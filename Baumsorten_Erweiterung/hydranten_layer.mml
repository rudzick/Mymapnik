  - id: hydranten
    class: hydranten
    geometry: point
    <<: *extents
    Datasource:
      <<: *osm2pgsql
      table: |-
        (SELECT
            way, "emergency"
          FROM planet_osm_point                                                                     
          WHERE "emergency" = 'fire_hydrant'
        ) AS hydranten                                                                          
    properties:
      minzoom: 20
